<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>etm-${project.version}</baseDirectory>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.jecstar.etm:etm-gui</include>
				<include>com.jecstar.etm:etm-processor-mdb</include>
				<include>com.jecstar.etm:etm-processor-rest</include>
				<include>com.jecstar.etm:etm-processor-ws</include>
				<include>com.jecstar.etm:etm-scheduler-retention</include>
			</includes>
			<binaries>
				<outputDirectory>components</outputDirectory>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
        <fileSet>
            <outputDirectory>documentation</outputDirectory>
            <directory>../etm-documentation/target/docbook/publish</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>resources/elasticsearch/scripts</outputDirectory>
            <directory>../etm-processor/src/main/resources/config/scripts</directory>
        </fileSet>
	</fileSets>
	<files>
        <file>
            <source>../etm-processor-mdb/target/generated-resources/schemagen/schema1.xsd</source>
            <outputDirectory>resources/schemas</outputDirectory>
            <destName>telemetry-event.xsd</destName>
        </file>
        <file>
            <source>../etm-processor-rest/src/main/schema/telemetry-event.json</source>
            <outputDirectory>resources/schemas</outputDirectory>
        </file>        
	</files>
</assembly>