<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>etm-gui</display-name>
	<servlet-mapping>
		<servlet-name>javax.ws.rs.core.Application</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<security-constraint>
	   <display-name></display-name>
		<web-resource-collection>
		    <web-resource-name>AdminRest</web-resource-name>
			<url-pattern>/rest/admin/*</url-pattern>
		</web-resource-collection>
        <web-resource-collection>
            <web-resource-name>SystemRest</web-resource-name>
            <url-pattern>/rest/system/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>AdminHtml</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
		<auth-constraint>
			<role-name>etm-administrator</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
		    <web-resource-name>QueryRest</web-resource-name>
			<url-pattern>/rest/query/*</url-pattern>
		</web-resource-collection>
        <web-resource-collection>
            <web-resource-name>QueryHtml</web-resource-name>
            <url-pattern>/search/*</url-pattern>
        </web-resource-collection>
		<auth-constraint>
			<role-name>etm-administrator</role-name>
			<role-name>etm-searcher</role-name>
		</auth-constraint>
	</security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>StatisticsRest</web-resource-name>
            <url-pattern>/rest/statistics/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>StatisticsHtml</web-resource-name>
            <url-pattern>/dashboard/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>etm-administrator</role-name>
            <role-name>etm-controller</role-name>
        </auth-constraint>
    </security-constraint>
	<login-config>
        <auth-method>FORM</auth-method>
        <realm-name>EtmRealm</realm-name>
        <form-login-config> 
            <form-login-page>/login/login.html</form-login-page> 
            <form-error-page>/login/login-error.html</form-error-page> 
        </form-login-config>
	</login-config>
	<security-role>
	   <role-name>etm-administrator</role-name>
	</security-role>
    <security-role>
       <role-name>etm-searcher</role-name>
    </security-role>
    <security-role>
       <role-name>etm-controller</role-name>
    </security-role>
</web-app>